{
  "name": "xAPIWrapper",
  "description": "An easier way to build, send, and retrieve xAPI statements",
  "author": "ADL",
  "version": "2.0.1",
  "main": "webpack.config.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/creighton/xAPIWrapper.git"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-loader": "^8.0.6",
    "babel-register": "^6.26.0",
    "doxstrap": "~0.0.5",
    "jshint": "^2.9.5",
    "mocha": "^3.4.2",
    "should": "^11.2.1",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-concat-plugin": "^3.0.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "crypto-js": "^3.1.9-1",
    "node-fetch": "^1.7.1"
  },
  "scripts": {
    "build": "webpack",
    "testwrapper": "mocha --no-timeouts --require babel-polyfill --compilers js:babel-register test/testWrapper.js",
    "testactivity": "mocha --no-timeouts --require babel-polyfill --compilers js:babel-register test/testActivity.js",
    "testagent": "mocha --no-timeouts --require babel-polyfill --compilers js:babel-register test/testAgent.js",
    "testgroup": "mocha --no-timeouts --require babel-polyfill --compilers js:babel-register test/testGroup.js",
    "teststatementref": "mocha --no-timeouts --require babel-polyfill --compilers js:babel-register test/testStatementRef.js",
    "testsubstatement": "mocha --no-timeouts --require babel-polyfill --compilers js:babel-register test/testSubStatement.js",
    "testverb": "mocha --no-timeouts --require babel-polyfill --compilers js:babel-register test/testVerb.js",
    "testutils": "mocha --no-timeouts --require babel-polyfill --compilers js:babel-register test/testUtils.js",
    "test": "npm run testwrapper && npm run testactivity && npm run testagent && npm run testgroup && npm run teststatementref && npm run testsubstatement && npm run testverb && npm run testutils"
  }
